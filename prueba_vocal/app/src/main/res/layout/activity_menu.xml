<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/banner"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="65dp"
            android:layout_height="88dp"
            android:adjustViewBounds="true"
            android:src="@drawable/saludo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/century_gothic"
            android:text="usuario"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_salir"
            android:background="@android:color/transparent"
            android:layout_width="69dp"
            android:layout_height="89dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/salir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_marginTop="164dp"
            android:fontFamily="@font/century_gothic"
            android:gravity="center"
            android:text="Select an option"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="243dp"
            android:layout_height="33dp"
            android:fontFamily="@font/century_gothic"
            android:gravity="center"
            android:text="(Seleciona una opciÃ³n)"
            android:textSize="18dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_" />

        <ImageView
            android:id="@+id/cuento"
            android:layout_width="95dp"
            android:layout_height="106dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/cuento_icon"
            app:layout_constraintEnd_toStartOf="@+id/btn_mov_cuentos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/letras" />

        <ImageView
            android:id="@+id/letras"
            android:layout_width="95dp"
            android:layout_height="106dp"
            android:layout_marginTop="263dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/camino_a"
            app:layout_constraintEnd_toStartOf="@+id/btn_mov_letras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_mov_letras"
            android:layout_width="241dp"
            android:layout_height="88dp"
            android:layout_marginTop="276dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/century_gothic"
            android:hapticFeedbackEnabled="false"
            android:text="Iniciar practica/Start practice"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/letras"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_mov_cuentos"
            android:layout_width="241dp"
            android:layout_height="88dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/aqua"
            android:fontFamily="@font/century_gothic"
            android:hapticFeedbackEnabled="false"
            android:text="Leer los cuentos /read the book"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cuento"
            app:layout_constraintTop_toBottomOf="@+id/btn_mov_letras" />

        <ImageView
            android:id="@+id/adivina"
            android:layout_width="95dp"
            android:layout_height="106dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            style="@style/BotonSinFondo"
            android:src="@drawable/adivina"
            app:layout_constraintEnd_toStartOf="@+id/btn_mov_adivina"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cuento" />

        <Button
            android:id="@+id/btn_mov_adivina"
            android:layout_width="241dp"
            android:layout_height="88dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/century_gothic"
            android:hapticFeedbackEnabled="false"
            android:text="Juego de adivinanza/Guess Game"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cuento"
            app:layout_constraintTop_toBottomOf="@+id/btn_mov_cuentos" />
    </android.support.constraint.ConstraintLayout>
</layout>